{
  "env": {
    "browser": true, //roda no browser
    "es2021": true, //utilizando o import e export
    "node": true //roda no node
  },
  "extends": ["plugin:react/recommended", "standard"], //lista de plugins jรก pronta usamos a standard
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"], //plugin para ativar compatibilidade com react
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  }
}
